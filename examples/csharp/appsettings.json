{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "SecureAPIs": {
    "RateLimitRequests": 100,
    "RateLimitWindowSeconds": 60,
    "JwtSecret": "your-super-secret-jwt-key",
    "EnableInputValidation": true,
    "EnableSecurityHeaders": true,
    "EnableCors": true
  }
}